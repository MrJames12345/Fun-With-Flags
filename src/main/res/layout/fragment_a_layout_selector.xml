<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_a_layout_selector"
    android:layout_width="409dp"
    android:layout_height="wrap_content" >

    <!-- IMAGE: Layout 1 -->
    <ImageView
        android:id="@+id/layout1"
        android:layout_width="39dp"
        android:layout_height="88dp"
        android:src="@drawable/layout1"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/layout2"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- IMAGE: Layout 2 -->
    <ImageView
        android:id="@+id/layout2"
        android:layout_width="38dp"
        android:layout_height="90dp"
        android:src="@drawable/layout2"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/layout1"
        app:layout_constraintRight_toLeftOf="@+id/layout3"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- IMAGE: Layout 3 -->
    <ImageView
        android:id="@+id/layout3"
        android:layout_width="37dp"
        android:layout_height="92dp"
        android:src="@drawable/layout3"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/layout2"
        app:layout_constraintRight_toLeftOf="@+id/orientation"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- IMAGE: Arrow -->
    <ImageView
        android:id="@+id/orientation"
        android:layout_width="39dp"
        android:layout_height="86dp"
        android:src="@drawable/arrow"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/layout3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout >