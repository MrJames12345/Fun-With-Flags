<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_c_info_display"
    android:layout_width="409dp"
    android:layout_height="70dp"
    android:paddingVertical="15dp">

    <!-- IMAGE: Previous Button -->
    <ImageView
        android:id="@+id/previousButton"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:src="@drawable/previous_button"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/points"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TEXT: Points -->
    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="POINTS: x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/previousButton"
        app:layout_constraintRight_toLeftOf="@id/status"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- TEXT: Points -->
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Winner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/points"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout >